<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true"><shape>
            <gradient android:angle="270" android:endColor="#CCBCBCBC" android:startColor="#CCBCBCBC" />

            <stroke android:width="1px" android:color="#CCBCBCBC" />

            <corners android:radius="2dp" />
        </shape></item>
    <item android:state_selected="true"><shape>
            <gradient android:angle="270" android:endColor="#CCBCBCBC" android:startColor="#CCBCBCBC" />
            <stroke android:width="1px" android:color="#CCBCBCBC" />

            <corners android:radius="2dp" />
        </shape></item>
    <item><shape>
            <gradient android:angle="270" android:endColor="#CCFFFFFF" android:startColor="#CCFFFFFF" />

            <stroke android:width="1px" android:color="#CCBCBCBC" />

            <corners android:radius="2dp" />
        </shape></item>

</selector>
