<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/rlBackground"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginBottom="@dimen/divider_height"
              android:background="@color/white"
              android:orientation="vertical"
              android:paddingTop="@dimen/padding_large_top">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_photo"
                android:layout_marginLeft="@dimen/margin_large_left"
                android:layout_marginRight="@dimen/margin_large_right"
                android:background="@color/grey_bg"
                android:padding="1dp">
                <ImageView
                    android:id="@+id/ivPhoto"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/img_default_error"
                    android:scaleType="centerCrop"/>
            </FrameLayout>

            <ProgressBar
                android:id="@+id/prLoading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:visibility="visible"/>

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom">

                <!-- <ImageView android:id="@+id/ivGoogle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom|right"
                            android:layout_marginRight="@dimen/margin_large"
                            android:src="@drawable/powered_by_google_on_white"
                            android:visibility="gone"/>-->
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/margin_large_left"
                    android:layout_marginRight="@dimen/padding_large_right"
                    android:alpha="0.4"
                    android:background="@color/black"
                    android:padding="0dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_large"
                    android:layout_marginRight="@dimen/margin_large"
                    android:layout_marginTop="0dp"
                    android:layout_toLeftOf="@+id/tvPrice"
                    android:orientation="vertical"
                    android:padding="@dimen/padding_large">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/tvName"
                            style="@style/JocoHeaderView"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="bottom"
                            android:layout_margin="0dp"
                            android:layout_toLeftOf="@+id/tvPrice"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:padding="0dp"
                            android:paddingBottom="@dimen/padding_bottom"
                            android:paddingLeft="0dp"
                            android:paddingRight="0dp"
                            android:paddingTop="@dimen/padding_top"
                            android:text=""
                            android:textColor="@color/white"
                            android:textSize="@dimen/title_size"/>
                        <TextView
                            android:id="@+id/tvPrice"
                            style="@style/JocoHeaderView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:layout_margin="0dp"
                            android:lines="1"
                            android:maxLines="1"
                            android:text=""
                            android:textColor="@color/yellow"
                            android:textSize="@dimen/font_size_money"
                            android:textStyle="bold"/>
                    </RelativeLayout>
                    <TextView
                        android:id="@+id/tvAddress"
                        style="@style/JocoViewItalic"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_margin="0dp"
                        android:ellipsize="end"
                        android:lines="1"
                        android:maxLines="1"
                        android:padding="0dp"
                        android:text=""
                        android:textColor="@color/grey_bg"
                        android:textSize="@dimen/font_size_small"/>
                    <TextView
                        android:id="@+id/tvDescription"
                        style="@style/JocoView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_margin="0dp"
                        android:ellipsize="end"
                        android:lines="1"
                        android:maxLines="1"
                        android:padding="0dp"
                        android:text=""
                        android:textColor="@color/white"
                        android:textSize="14sp"/>
                </LinearLayout>


            </FrameLayout>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_large_bottom"
            android:layout_marginTop="@dimen/margin_large_top"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/padding_large_left"
            android:paddingRight="@dimen/padding_large_right">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal">
                <TextView
                    android:id="@+id/tvDistance"
                    style="@style/JocoView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:drawableLeft="@drawable/ic_line_grey"
                    android:drawablePadding="@dimen/padding"
                    />
            </LinearLayout>

            <!--<TextView-->
            <!--android:id="@+id/tvShare"-->
            <!--style="@style/JocoView"-->
            <!--android:layout_width="0dp"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:layout_margin="0dp"-->
            <!--android:layout_weight="1"-->
            <!--android:background="@drawable/selector_bg"-->
            <!--android:drawableLeft="@drawable/ic_share_grey"-->
            <!--android:drawablePadding="@dimen/padding"-->
            <!--android:text="@string/text_share"/>-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal">
                <TextView
                    android:id="@+id/tvFavourite"
                    style="@style/JocoView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="0dp"
                    android:background="@drawable/selector_bg"
                    android:drawableLeft="@drawable/ic_favourite_grey"
                    android:drawablePadding="@dimen/padding"
                    android:text="@string/text_favourite"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>