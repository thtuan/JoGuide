<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clMain"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/htab_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:fitsSystemWindows="true">
        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">
            <LinearLayout
                android:id="@+id/llFilter"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="?attr/actionBarSize"
                android:background="@color/white"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                app:layout_scrollFlags="scroll|enterAlways">
                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_margin="@dimen/margin_large"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rdDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_right"
                        android:text="@string/text_distance"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/font_size_small"/>
                    <ImageView
                        android:id="@+id/ivUpDistance"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:rotation="180"
                        android:src="@drawable/ic_down_grey"/>
                    <!--android:drawableRight="@drawable/ic_line_fill_green"-->

                    <RadioButton
                        android:id="@+id/rdPrice"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawablePadding="@dimen/padding_left"
                        android:text="@string/text_price"
                        android:textColor="@color/text_color"
                        android:textSize="@dimen/font_size_small"/>
                    <ImageView
                        style="@style/JocoView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/activity_horizontal_margin"
                        android:rotation="180"
                        android:src="@drawable/ic_down_grey"/>
                </RadioGroup>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/primary_500"/>
            </LinearLayout>
            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/white"
                android:fitsSystemWindows="true"
                android:gravity="top"
                android:minHeight="?attr/actionBarSize"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                android:visibility="visible"
                app:contentInsetStart="0dp"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                <RelativeLayout
                    android:id="@+id/ll_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/primary_500">

                    <ImageView
                        android:id="@+id/ivBack"
                        style="@style/JocoMenuIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/selector_icon_bg"
                        android:src="@drawable/ic_back_white"/>
                    <TextView
                        android:id="@+id/tvTitle"
                        style="@style/JocoTitleView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/ivBack"
                        android:maxLines="1"
                        android:textColor="@color/white"
                        android:visibility="gone"/>
                    <com.boot.accommodation.common.control.JoCoEditText
                        android:id="@+id/etSearch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="@dimen/margin_search"
                        android:layout_marginTop="@dimen/margin_search"
                        android:layout_toLeftOf="@+id/ivFilter"
                        android:layout_toRightOf="@+id/ivBack"
                        android:background="@color/white"
                        android:completionThreshold="1"
                        android:cursorVisible="false"
                        android:hint="@string/text_search"
                        android:imeOptions="actionSearch"
                        android:inputType="text"
                        android:padding="@dimen/padding"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/black_trans40"/>
                    <ImageView
                        android:id="@+id/ivFilter"
                        style="@style/JocoMenuIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:background="@drawable/selector_icon_bg"
                        android:src="@drawable/ic_filter_white"/>

                </RelativeLayout>
            </android.support.v7.widget.Toolbar>

        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>

    <FrameLayout
        android:id="@+id/frDetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
    </FrameLayout>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabMap"
        style="@style/JocoFloatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:src="@drawable/ic_map_white"
        android:visibility="visible"
        app:fabSize="normal"/>

</android.support.design.widget.CoordinatorLayout>
