<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cdView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/htab_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <!--<include layout="@layout/activity_place_detail_header" />-->

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="?attr/actionBarSize"
                app:layout_scrollFlags="scroll|enterAlways">

                <ImageView
                    android:id="@+id/ivPlaceDetailHeader"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/height_photo"
                    android:layout_marginLeft="@dimen/margin_large_left"
                    android:layout_marginRight="@dimen/padding_large_right"
                    android:layout_marginTop="@dimen/margin_large_top"
                    android:padding="0dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_default_error"
                    app:layout_scrollFlags="scroll|enterAlways"/>

                <ProgressBar
                    android:id="@+id/prLoading"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:visibility="visible"/>

                <ImageView
                    android:id="@+id/ivGoogle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|right"
                    android:layout_marginLeft="@dimen/margin_large_left"
                    android:layout_marginRight="@dimen/padding_large_right"
                    android:layout_marginTop="@dimen/margin_large_top"
                    android:padding="0dp"
                    android:src="@drawable/powered_by_google_on_white"
                    android:visibility="gone"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom"
                    android:layout_marginLeft="@dimen/margin_large_left"
                    android:layout_marginRight="@dimen/margin_large_right"
                    android:layout_marginTop="@dimen/margin_large_top"
                    android:background="@color/black_trans40"
                    android:orientation="horizontal">


                    <TextView
                        android:id="@+id/tvPlaceDetailHeaderName"
                        style="@style/JocoHeaderView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:maxLines="2"
                        android:text=""
                        android:textColor="@color/white"
                        android:textStyle="bold"/>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/margin_large_bottom"
                        android:layout_marginRight="@dimen/margin_large_right"
                        android:background="@drawable/place_detail_background_mark"
                        android:orientation="vertical"
                        android:paddingLeft="@dimen/padding_large_left"
                        android:paddingRight="@dimen/padding_large_right">

                        <TextView
                            android:id="@+id/tvPlaceDetailHeaderMark"
                            style="@style/JocoHeaderView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="0dp"
                            android:padding="0dp"
                            android:text="@string/text_default_mark"
                            android:textColor="@color/white"/>

                        <TextView
                            android:id="@+id/tvPlaceDetailHeaderNumVoted"
                            style="@style/JocoView"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:layout_margin="0dp"
                            android:text="@string/text_default_num_voted"
                            android:textColor="@color/text_trasparent_bg"
                            android:textSize="10sp"/>

                    </LinearLayout>

                </LinearLayout>
            </FrameLayout>

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:layout_gravity="top"
                android:background="?attr/colorPrimary"
                app:contentInsetStart="0dp"
                app:layout_collapseMode="pin">

                <ImageView
                    android:id="@+id/ivBack"
                    style="@style/JocoMenuIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/selector_icon_bg"
                    android:src="@drawable/ic_back_white"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical">

                    <TextView
                        style="@style/JocoTitleView"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_margin="0dp"
                        android:layout_weight="1"
                        android:padding="0dp"
                        android:text="@string/text_accommodation"
                        android:textColor="@color/white"/>

                    <ImageView
                        android:id="@+id/ivCheckin"
                        style="@style/JocoMenuIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/selector_icon_bg"
                        android:src="@drawable/ic_location_checkin_white"
                        android:visibility="gone"/>

                    <ImageView
                        android:id="@+id/ivFavourite"
                        style="@style/JocoMenuIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/selector_icon_bg"
                        android:src="@drawable/ic_favourite_white"/>
                </LinearLayout>
            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.CollapsingToolbarLayout>

        <android.support.design.widget.TabLayout
            android:id="@+id/htab_tabs"
            style="@style/JoCoNavigationTab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_margin="0dp"
            android:fillViewport="false"
            android:padding="0dp"
            app:tabGravity="fill"
            app:tabMode="scrollable"
            />
    </android.support.design.widget.AppBarLayout>

    <com.boot.accommodation.vp.home.CustomViewPager
        android:id="@+id/detailPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_top"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"/>

    <android.support.design.widget.CoordinatorLayout
        android:id="@+id/clFunction"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right">
        <LinearLayout
            android:id="@+id/llReportLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginBottom="130dp"
            android:layout_marginLeft="@dimen/margin_large_left"
            android:layout_marginRight="@dimen/margin_right"
            android:layout_marginTop="@dimen/margin_large_top"
            android:orientation="horizontal"
            android:visibility="gone">
            <TextView
                style="@style/JocoView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/border_tooltip_float_button"
                android:text="@string/text_report"
                android:textColor="@color/white"
                android:visibility="visible"/>
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fabReportLocation"
                style="@style/JocoFloatingActionButtonGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:src="@drawable/ic_report_white"
                android:visibility="visible"
                app:fabSize="mini"
                app:pressedTranslationZ="12dp"
                />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/llDirection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center_horizontal"
            android:layout_marginBottom="80dp"
            android:layout_marginLeft="@dimen/margin_large_left"
            android:layout_marginRight="@dimen/margin_right"
            android:layout_marginTop="@dimen/margin_large_top"
            android:gravity="right"
            android:orientation="horizontal"
            android:visibility="gone">
            <TextView
                style="@style/JocoView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/border_tooltip_float_button"
                android:text="@string/text_direction"
                android:textColor="@color/white"
                android:visibility="visible"/>
            <android.support.design.widget.FloatingActionButton
                android:id="@+id/fabDirection"
                style="@style/JocoFloatingActionButtonGroup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_direction_white"
                android:visibility="visible"
                app:fabSize="mini"
                app:pressedTranslationZ="12dp"
                />
        </LinearLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fabFunction"
            style="@style/JocoFloatingActionButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            android:src="@drawable/ic_dot_menu_white"
            app:fabSize="normal"
            app:pressedTranslationZ="12dp"
            />
    </android.support.design.widget.CoordinatorLayout>
    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fabAddPicture"
        style="@style/JocoFloatingActionButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:src="@drawable/ic_plus_fill_white"
        android:visibility="invisible"
        app:fabSize="normal"/>
</android.support.design.widget.CoordinatorLayout>