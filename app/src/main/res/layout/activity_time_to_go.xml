<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cdView"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/htab_appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:fitsSystemWindows="true">
        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="?attr/actionBarSize"
                android:background="@color/white"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                app:layout_scrollFlags="scroll|enterAlways">
                <TextView
                    android:id="@+id/tvTitleLocationShouldGo"
                    style="@style/JocoView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_margin="0dp"
                    android:maxLines="1"
                    android:padding="0dp"
                    android:text="@string/text_location_should_go"
                    android:textColor="@color/primary_500"
                    android:textSize="@dimen/title_size"/>

                <LinearLayout
                    android:id="@+id/llFilter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:animateLayoutChanges="true"
                    android:background="@color/white"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tvTitleGroup"
                        style="@style/JocoView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_margin="0dp"
                        android:text="@string/text_sort_by"
                        android:textColor="@color/primary_500"
                        android:visibility="gone"/>

                    <RadioGroup
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/margin_right"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">
                        <RadioButton
                            android:id="@+id/rdRandom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"
                            android:checked="true"
                            android:paddingLeft="-2dp"
                            android:text="@string/text_random"
                            android:textColor="@color/primary_500"
                            android:textSize="12sp"/>
                        <!--android:drawableRight="@drawable/ic_random_green"-->


                        <RadioButton
                            android:id="@+id/rdDistance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/margin_right"
                            android:paddingLeft="-2dp"
                            android:text="@string/text_distance"
                            android:textColor="@color/text_color"
                            android:textSize="12sp"/>
                        <ImageView
                            android:id="@+id/ivUpDistance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/activity_horizontal_margin"
                            android:rotation="180"
                            android:src="@drawable/ic_down_grey"/>
                        <!--android:drawableRight="@drawable/ic_line_fill_green"-->

                        <RadioButton
                            android:id="@+id/rdLike"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/padding_left"
                            android:drawableRight="@drawable/ic_down_grey"
                            android:paddingLeft="-2dp"
                            android:text="@string/text_favourite"
                            android:textColor="@color/text_color"
                            android:textSize="12sp"/>
                        <!--android:drawableRight="@drawable/ic_favourite_fill_green"-->

                    </RadioGroup>
                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:background="@color/primary_500"/>

            </LinearLayout>
            <android.support.v7.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/white"
                android:fitsSystemWindows="true"
                android:gravity="top"
                android:minHeight="?attr/actionBarSize"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                android:visibility="visible"
                app:contentInsetStart="0dp"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

                <RelativeLayout
                    android:id="@+id/ll_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/primary_500">

                    <ImageView
                        android:id="@+id/ivMenu"
                        style="@style/JocoMenuIcon"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:background="@drawable/selector_icon_bg"
                        android:src="@drawable/ic_menu_white"/>

                    <com.boot.accommodation.common.control.JoCoEditText
                        android:id="@+id/edSearch"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_centerVertical="true"
                        android:layout_marginBottom="@dimen/margin_search"
                        android:layout_marginTop="@dimen/margin_search"
                        android:layout_toLeftOf="@+id/frFilter"
                        android:layout_toRightOf="@+id/ivMenu"
                        android:background="@color/white"
                        android:completionThreshold="1"
                        android:cursorVisible="false"
                        android:descendantFocusability="beforeDescendants"
                        android:focusableInTouchMode="true"
                        android:hint="@string/text_choose_time"
                        android:imeActionLabel="Search"
                        android:imeOptions="actionSearch"
                        android:inputType="text"
                        android:padding="@dimen/padding"
                        android:textColor="@color/text_color"
                        android:textColorHint="@color/black_trans40"/>

                    <FrameLayout
                        android:id="@+id/frFilter"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true">

                        <View
                            style="@style/JocoMenuIcon"
                            android:layout_width="@dimen/activity_horizontal_margin"
                            android:layout_height="match_parent"
                            android:layout_gravity="right"
                            android:background="@drawable/selector_icon_bg"
                            android:src="@drawable/ic_filter_white"/>

                        <ImageView
                            android:id="@+id/ivFilter"
                            style="@style/JocoMenuIcon"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:background="@drawable/selector_icon_bg"
                            android:src="@drawable/ic_filter_white"/>

                    </FrameLayout>
                </RelativeLayout>

            </android.support.v7.widget.Toolbar>
        </android.support.design.widget.CollapsingToolbarLayout>
    </android.support.design.widget.AppBarLayout>
    <!--<FrameLayout-->
    <!--android:id="@+id/frDetail"-->
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent">-->
    <!--</FrameLayout>-->

    <FrameLayout
        android:id="@+id/frDetail"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">
    </FrameLayout>
</android.support.design.widget.CoordinatorLayout>