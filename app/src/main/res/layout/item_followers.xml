<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/rlGoLeaderInfo"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="vertical">

    <RelativeLayout
        android:background="@drawable/selector_bg"
        android:id="@+id/rlGoProfile"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.github.siyamed.shapeimageview.CircularImageView
            style="@style/JocoSmallAvatar"
            android:layout_margin="@dimen/margin_large"
            android:id="@+id/ivImage"
            android:layout_width="@dimen/avatar_width"
            android:layout_height="@dimen/avatar_height"
            android:src="@drawable/img_default_error"/>

        <TextView
            android:id="@+id/tvName"
            style="@style/JocoView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/padding_large"
            android:layout_toRightOf="@+id/ivImage"
            android:ellipsize="end"
            android:lines="1"
            android:text="Lee Nguyen"/>


        <ImageView
            android:id="@+id/ivAddFriend"
            style="@style/JocoView"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_add_user_green"/>


        <TextView
            android:id="@+id/tvPhone"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/tvId"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <View
        android:background="@color/grey_bg"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider_height_small"/>
</LinearLayout>