<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/rl_login_background"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/white"
              android:orientation="vertical">

    <android.support.design.widget.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <android.support.v7.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="?attr/colorPrimary"
            android:gravity="top"
            android:minHeight="?attr/actionBarSize"
            app:contentInsetStart="0dp"
            app:layout_collapseMode="pin"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/primary_500">

                <ImageView
                    android:id="@+id/ivBack"
                    style="@style/JocoMenuIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/selector_icon_bg"
                    android:src="@drawable/ic_back_white"/>
                <TextView
                    style="@style/JocoTitleView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@+id/ivBack"
                    android:gravity="center_vertical"
                    android:text="@string/text_signup"
                    android:textColor="@color/white"/>
            </RelativeLayout>

        </android.support.v7.widget.Toolbar>
    </android.support.design.widget.AppBarLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/padding_left_login"
        android:paddingRight="@dimen/padding_right_login"
        android:paddingTop="@dimen/padding_top_login">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_control_login"
            android:orientation="vertical">


            <com.boot.accommodation.common.control.JoCoEditText
                android:id="@+id/etFisrtName"
                style="@style/JocoView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="@string/text_first_name"
                android:imeOptions="actionNext"
                android:lines="1"
                android:maxLines="1"
                android:padding="@dimen/padding_large"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_bg"></View>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_control_login"
            android:orientation="vertical">


            <com.boot.accommodation.common.control.JoCoEditText
                android:id="@+id/etLastName"
                style="@style/JocoView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="@string/text_last_name"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:padding="@dimen/padding_large"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_bg"></View>
        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_control_login"
            android:orientation="vertical">


            <com.boot.accommodation.common.control.JoCoEditText
                android:id="@+id/etEmail"
                style="@style/JocoView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="@string/text_email_or_phone"
                android:imeOptions="actionNext"
                android:maxLines="1"
                android:padding="@dimen/padding_large"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_bg"></View>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_control_login"
            android:layout_marginTop="@dimen/margin_control_login"
            android:orientation="vertical">


            <com.boot.accommodation.common.control.JoCoEditText
                android:id="@+id/etPassword"
                style="@style/JocoView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="@string/text_password"
                android:imeOptions="actionNext"
                android:inputType="textPassword"
                android:maxLines="1"
                android:padding="@dimen/padding_large"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_bg"></View>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/margin_control_login"
            android:layout_marginTop="@dimen/margin_control_login"
            android:orientation="vertical">


            <com.boot.accommodation.common.control.JoCoEditText
                android:id="@+id/etConfirmPassword"
                style="@style/JocoView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="@string/text_confirm_password"
                android:imeOptions="actionDone"
                android:inputType="textPassword"
                android:padding="@dimen/padding_large"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/grey_bg"></View>
        </LinearLayout>

        <Button
            android:id="@+id/btSignUp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/margin_control_login"
            android:background="@drawable/border_button_login"
            android:text="@string/text_signup"
            android:textColor="@color/white"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/margin_large_bottom"/>
    </LinearLayout>

</LinearLayout>

