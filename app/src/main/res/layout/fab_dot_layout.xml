<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <android.support.design.widget.FloatingActionButton
        android:scaleType="center"
        android:id="@+id/fabDetail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/ic_detail_white"
        android:visibility="invisible"
        app:backgroundTint="@color/primary_500"
        app:fabSize="mini"
        app:fab_colorPressed="@color/primary_700"/>

    <android.support.design.widget.FloatingActionButton
        android:scaleType="center"
        android:id="@+id/fabDirection"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/ic_direction_white"
        android:visibility="invisible"
        app:backgroundTint="@color/primary_500"
        app:fabSize="mini"
        app:fab_colorPressed="@color/primary_700"/>

    <android.support.design.widget.FloatingActionButton
        android:scaleType="center"
        android:id="@+id/fabReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="@dimen/fab_margin"
        android:src="@drawable/ic_review_white"
        android:visibility="invisible"
        app:backgroundTint="@color/primary_500"
        app:fabSize="mini"
        app:fab_colorPressed="@color/primary_700"/>
</FrameLayout>
