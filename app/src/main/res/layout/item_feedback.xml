<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/llViewFeedback"
              android:background="@color/white"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

<LinearLayout
    android:background="@drawable/selector_bg"
    android:paddingTop="@dimen/padding_large_top"
    android:paddingBottom="@dimen/padding_large_bottom"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.github.siyamed.shapeimageview.CircularImageView
        android:id="@+id/ivImage"
        style="@style/JocoSmallAvatar"
        android:layout_width="@dimen/avatar_width"
        android:layout_height="@dimen/avatar_height"
        android:layout_marginLeft="@dimen/margin_large"
        android:layout_marginRight="@dimen/margin_large"
        android:scaleType="fitXY"
        android:src="@drawable/img_default_error"/>

    <LinearLayout
        android:id="@+id/llListFeedback"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tvIdTour"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

            <TextView
                android:id="@+id/tvTourAndName"
                style="@style/JocoView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:padding="0dp"
                android:text="Tourist and Tourname"/>


            <TextView
                android:id="@+id/tvDateTime"
                style="@style/JocoThinSmallView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="0dp"
                android:drawablePadding="@dimen/padding"
                android:drawableRight="@drawable/ic_clock_white"
                android:padding="0dp"
                android:text="Date Time"/>

            <TextView
                android:layout_marginRight="@dimen/margin"
                android:id="@+id/tvContent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="he is bad guide i had seen, so i never join tour of this company again !"/>

    </LinearLayout>

    <TextView
        android:id="@+id/tvIdFeedback"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"/>

</LinearLayout>
<View
    android:background="@color/grey_bg"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/divider_height_small"/>

</LinearLayout>