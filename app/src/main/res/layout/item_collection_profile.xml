<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:id="@+id/llGotoDetail"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_margin="@dimen/margin_large"
              android:background="@drawable/selector_bg"
              android:gravity="center"
              android:orientation="vertical">

    <com.github.siyamed.shapeimageview.CircularImageView
        android:id="@+id/ivPlace"
        style="@style/JocoSmallAvatar"
        android:layout_width="@dimen/avatar_width_la"
        android:layout_height="@dimen/avatar_height_la"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/margin_large"
        android:src="@drawable/img_default_error"
        app:siBorderColor="@color/white"/>

    <TextView
        android:id="@+id/tvPlace"
        style="@style/JocoView"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:lines="1"
        android:padding="0dp"
        android:text="Buon Ma thuot"
        android:textColor="@color/grey_for_word_profile"/>

</LinearLayout>